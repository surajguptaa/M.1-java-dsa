import java.util.*;
import java.lang.*;
import java.io.*;

class Main{
	public static void main (String[] args) throws java.lang.Exception
	{
	    int left=0,right=0;
	Scanner sc = new Scanner(System.in);
	int t = sc.nextInt();
	
	for(int i=0;i<t;i++){
	    int n = sc.nextInt();
	    int m = sc.nextInt();
	    int total = n*2;
	   if(m>=n){
	       System.out.println(n);
	   }
	   else if(m<n){
	      System.out.println(total-m);
	   }
	  
	   } 
	}
}
